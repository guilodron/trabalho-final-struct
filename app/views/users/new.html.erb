<div class="container">
  <div class="row align-items-center login-signup-container">
    <div class="col justify-content-center">
      <div class="m-auto">
        <!--Formulário para o login-->
        <div class="center-login">
          <h2>Já possui<br> uma conta?</h2>
          <%=form_with url: :login, method: :post do |form| %>
            <div class="txt_field_login">
                <i class="fa fa-user"></i>
                <%= form.email_field :email, placeholder: "Email", required: true %>
            </div>
            <div class="txt_field_login">
                <i class="fa fa-lock"></i>
                <%= form.password_field :password, placeholder: "Senha", required: true %>
            </div>
            <%= form.submit "Login" %>
          <% end %>
        </div>
      </div>
    </div>
    <!--Para a barra vertical-->
    <div class="col justify-content-center">
      <div class="box"></div>
      <div class="box linha-vertical"></div>
    </div>

    <div class="col justify-content-center">
      <div class="m-auto">
        <!--Formulário para o cadastro-->
        <div class="center-cadastro">
          <h2>Cadastrar</h2>
          <%=form_with model:@user, url: :new_user, method: :post do |form| %>
            <div class="txt_field_cadastro">
              <i class="fa fa-user"></i>
              <%= form.text_field :user_name, placeholder: "Nome", required: true %>
            </div>
            <div class="txt_field_cadastro">
              <i class="fa fa-envelope"></i>
              <%= form.email_field :email, placeholder: "Email", required: true %>
            </div>
            <div class="txt_field_cadastro">
              <i class="fa fa-lock"></i>
              <%= form.password_field :password, placeholder: "Senha", required: true %>
            </div>
            <div class="txt_field_cadastro">
              <i class="fa fa-lock"></i>
              <%= form.password_field :password_confirmation, placeholder: "Confirme sua senha", required: true %>
            </div>
            <div class="check">
              <p>Gêneros favoritos</p>
              <% movie_genres.each_with_index do |genre, index| %>
                <% even_index = index % 2 == 0 %>
                <label>
                  <%= "<div class='row'>".html_safe if even_index %>
                    <div class="col">
                      <%= form.check_box genre.to_sym %>
                      <%= form.label genre.to_sym, genre %><br>
                    </div>
                  <%= "</div>".html_safe if !even_index %>
                </label>
              <% end %>
            </div>
            <div class="question">
              <p>Sobre mim</p>
              <%= form.text_area :info, required: true, id: "big-text", rows: 5 %>
            </div>
            <%= form.submit "Cadastrar" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>