<div class="edit-userpage">
  <div class="container">
  <h2>Editar perfil</h2>
    <img src="/assets/undraw2.svg" class="imagem" alt="imagem de plano de fundo">
    <div class="w-50">
      <%= form_with model: @user, url: :edit_user do |form| %>
        <div class="form-group">
          <%=form.label :nome %>
          <%=form.text_field :user_name, maxlength: '18', placeholder: 'Digite seu novo nome', class: 'form-control'%>
        </div>
        <div class="form-group">
          <%=form.label :info %>
          <%=form.text_area :info, class: 'form-control', size: '60x5' %>
        </div>
        <div class="form-group">
          <%=form.label :generos_favoritos, id:'genres' %>
          <%=form.select :favorite_genres,["Drama", "Comédia", "Terror", "Animação", "Ação", "Sobrenatural", "Psicológico", "Fantasia"], class: 'form-control'  %>
        </div>
        <div class="form-group">
          <%=form.label :foto_de_perfil, id:'fonte' %>
          <%=form.file_field :photo, class: 'form-control', id:'profile' %>
        </div>
        <%=form.submit "Efetuar Mudanças", id: 'submit' %>
      <% end %>
  </div>
</div>
</div>