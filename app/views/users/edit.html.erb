
<div class="container">
  <%= form_with model: @user, url: :edit_user do |form| %>
    <div class="form-group">
      <%=form.label :nome %>
      <%=form.text_field :user_name, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%=form.label :info %>
      <%=form.text_area :info, class: 'form-control', size: '60x5' %>
    </div>
    <div class="form-group">
      <%=form.label :generos_favoritos %>
      <%=form.select :favorite_genres,["Drama", "Comédia", "Terror", "Animação", "Ação", "Sobrenatural", "Psicológico", "Fantasia"] ,class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%=form.label :foto_de_perfil%>
      <%=form.file_field :photo, class: 'form-control' %>
    </div>
    <%=form.submit "Efetuar Mudanças" %>
  <% end %>

</div>