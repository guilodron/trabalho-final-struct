<%@movies.each do |m| %>
  <p><%= m.name %></p>
  <% if m.photo.attached?%>
      <%= image_tag(m.photo, id: "profile-picture", class:"rounded-circle") %>
  <%else %>
    <%= image_tag('blank-profile-picture.png', id: 'profile-picture', class: 'rounded-circle') %>
